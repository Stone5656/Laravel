{
    "openapi": "3.0.0",
    "info": {
        "title": "Streaming Site API",
        "description": "動画配信サイト向けのAPIです。ユーザー管理、認証、配信ステータスなどを提供します。",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost",
            "description": "Laravel 12 Sail　ローカル開発環境"
        }
    ],
    "paths": {
        "/api/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "ユーザー一覧の取得",
                "description": "管理者が全ユーザーの一覧を取得します。",
                "operationId": "c457726701591d1183b53aa71fc13441",
                "responses": {
                    "200": {
                        "description": "ユーザー一覧の取得に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/{user}/edit": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "ユーザー編集用データの取得",
                "description": "指定したユーザーIDに対応するプロフィール情報を取得します。",
                "operationId": "fd5656a1832eb634bcd230c62016d66a",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "対象ユーザーID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ユーザー情報の取得に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/{user}/profile": {
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "ユーザープロフィールの更新",
                "description": "指定したユーザーのプロフィール情報（名前、自己紹介、画像等）を更新します。",
                "operationId": "d095e130b62b04e5a18591e47395f4d1",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "更新対象のユーザーID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "更新するプロフィール情報",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "description": "ユーザー名",
                                        "type": "string"
                                    },
                                    "bio": {
                                        "description": "自己紹介文",
                                        "type": "string"
                                    },
                                    "profile_image_path": {
                                        "description": "プロフィール画像パス",
                                        "type": "string"
                                    },
                                    "cover_image_path": {
                                        "description": "カバー画像パス",
                                        "type": "string"
                                    },
                                    "channel_name": {
                                        "description": "チャンネル名",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "プロフィールの更新に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/{user}/roles": {
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "ユーザーのロール（役割）の変更",
                "description": "指定したユーザーのロール（admin, userなど）を変更します。",
                "operationId": "65dad7e8f68131e207b99d51955ef548",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "変更対象のユーザーID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "新しいロール情報",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "roles": {
                                        "description": "新しいロール",
                                        "type": "string",
                                        "example": "admin"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ロールの更新に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/{user}/streaming": {
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "配信ステータスの変更",
                "description": "指定したユーザーの配信ステータス（配信者かどうか）を更新します。",
                "operationId": "b71323aa1c3dc3028c4f6b5f0f4e797e",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "配信ステータス変更対象のユーザーID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "新しい配信ステータス",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "is_streamer": {
                                        "description": "配信者フラグ true/false",
                                        "type": "boolean"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "配信ステータスの更新に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/{user}": {
            "delete": {
                "tags": [
                    "Users"
                ],
                "summary": "ユーザーの削除",
                "description": "指定したユーザーアカウントを削除します。",
                "operationId": "e0f9a385a1d6788b99e519bd98cf7239",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "削除対象のユーザーID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ユーザーの削除に成功しました"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Users",
            "description": "カスタムしたユーザー関連操作"
        }
    ]
}